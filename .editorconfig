# EditorConfig for RealCraft
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# C/C++ source files
[*.{cpp,hpp,h,c,cc,cxx,hxx,inl,mm,metal}]
indent_style = space
indent_size = 4
max_line_length = 120

# Header files
[*.{h,hpp,hxx}]
indent_style = space
indent_size = 4

# Shader files
[*.{msl,glsl,vert,frag,comp,hlsl,hlsli}]
indent_style = space
indent_size = 4

# CMake files
[*.cmake]
indent_style = space
indent_size = 4

[CMakeLists.txt]
indent_style = space
indent_size = 4

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 4
end_of_line = lf

# Batch files (Windows)
[*.{bat,cmd}]
indent_style = space
indent_size = 4
end_of_line = crlf

# Makefiles
[Makefile]
indent_style = tab

# Git config files
[.git*]
indent_style = space
indent_size = 4
